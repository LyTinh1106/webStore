<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Thêm Nhãn Hàng</title>
  <style>
    body {
      font-family: Arial;
      padding: 20px;
    }
    label, input, button {
      display: block;
      margin-bottom: 10px;
    }
    .success {
      color: green;
    }
  </style>
</head>
<body>

  <h2>Thêm Nhãn Hàng</h2>

  <label for="brandName">Tên nhãn hàng:</label>
  <input type="text" id="brandName" name="brandName" placeholder="Nhập tên nhãn hàng">

  <button onclick="addBrand()">Thêm</button>

  <p id="message" class="success"></p>

  <script>
    function addBrand() {
      const brandName = document.getElementById("brandName").value.trim();
      const message = document.getElementById("message");

      if (brandName === "") {
        message.textContent = "Vui lòng nhập tên nhãn hàng.";
        message.style.color = "red";
        return;
      }

      // Gửi dữ liệu đến server tại đây nếu muốn (ví dụ dùng fetch/AJAX)

      message.textContent = `Đã thêm nhãn hàng: ${brandName}`;
      message.style.color = "green";
      document.getElementById("brandName").value = "";
    }
  </script>

</body>
</html>