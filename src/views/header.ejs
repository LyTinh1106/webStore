<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>
    <header>
        <div id="header">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-md-3">
                        <div class="header-logo">
                            <a href="#" class="logo">
                                <img src="/images/Screenshot_2025-03-24_213649-removebg-preview(1)(1).png" alt="">
                            </a>
                        </div>
                    </div>
                    <!-- /LOGO -->

                    <!-- SEARCH BAR -->
                    <div class="col-md-6">
                        <div class="header-search">
                            <form>
                                <input class="input" placeholder="Search here">
                                <button class="search-btn">Search</button>
                            </form>
                        </div>
                    </div>
                    <!-- /SEARCH BAR -->

                    <!-- ACCOUNT -->
                    <div class="col-md-3 clearfix">
                        <div class="header-ctn">
                            <!-- /Cart -->
                            <!--Account-->
                            <div class="dropdown Account">
                                <a href="#"
                                    class="d-inline-flex align-items-center text-decoration-none dropdown-toggle"
                                    id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-user-o me-1"></i>
                                    <% if (user && user.emails && user.emails[0]) { %>
                                        <%= user.emails[0].value.split('@')[0] %>
                                            <% } else { %>
                                                Guest
                                                <% } %>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <% if (user) { %>
                                        <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i> Hồ sơ</a>
                                        </li>
                                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i> Cài
                                                đặt</a></li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li><a class="dropdown-item" href="/logout"><i
                                                    class="fas fa-sign-out-alt me-2"></i>
                                                Đăng xuất</a></li>
                                        <% } else { %>
                                            <li><a class="dropdown-item" href="/login"><i
                                                        class="fas fa-sign-in-alt me-2"></i> Đăng nhập</a></li>
                                            <li><a class="dropdown-item" href="/register"><i
                                                        class="fas fa-user-plus me-2"></i> Đăng ký</a></li>
                                            <% } %>
                                </ul>
                            </div>
                            <!--/Account-->
                            <!-- Menu Toogle -->
                            <div class="menu-toggle">
                                <a href="#">
                                    <i class="fa fa-bars"></i>
                                    <span>Menu</span>
                                </a>
                            </div>
                            <!-- /Menu Toogle -->
                            <!-- Menu Toogle -->
                            <div class="menu-toggle">
                                <a href="#">
                                    <i class="fa fa-bars"></i>
                                    <span>Menu</span>
                                </a>
                            </div>
                            <!-- /Menu Toogle -->

                        </div>
                    </div>
                    <!-- /ACCOUNT -->
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
    </header>

    <!-- /MAIN HEADER -->
    <!-- NAVIGATION -->
    <nav id="navigation">
        <!-- container -->
        <div class="container">
            <!-- responsive-nav -->
            <div id="responsive-nav">
                <!-- NAV -->
                <ul class="main-nav nav navbar-nav">
                    <li class="active"><a href="#">Trang Chủ</a></li>
                    <li><a href="#">Khuyến Mãi Hot</a></li>
                    <li><a href="#">Danh Mục</a></li>
                    <li><a href="#">Laptop</a></li>
                    <li><a href="#">Điện Thoại</a></li>
                    <li><a href="#">Máy Ảnh</a></li>
                    <li><a href="#">Phụ Kiện</a></li>
                </ul>
                <!-- /NAV -->
            </div>
            <!-- /responsive-nav -->
        </div>
        <!-- /container -->
    </nav>
    <!-- /NAVIGATION -->
</body>

</html>