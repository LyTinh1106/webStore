<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>
    <!-- MAIN HEADER -->
    <div id="header">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- LOGO -->
                <div class="col-md-3">
                    <div class="header-logo">
                        <a href="/" class="logo">
                            <img src="/images/Screenshot_2025-03-24_213649-removebg-preview(1)(1).png" alt="">
                        </a>
                    </div>
                </div>
                <!-- /LOGO -->

                <!-- SEARCH BAR -->
                <!-- SEARCH BAR -->
                <!-- SEARCH BAR -->
                <div class="col-md-6">
                    <div class="header-search">
                        <form id="search-form" method="GET" action="/store">
                            <input class="input" id="search-input" name="q" placeholder="Search here">
                            <button class="search-btn" type="submit">Search</button>
                        </form>
                    </div>
                </div>
                <!-- /SEARCH BAR -->


                <!-- /SEARCH BAR -->

                <!-- ACCOUNT -->
                <div class="col-md-3 clearfix">
                    <div class="header-ctn">
                        <!-- Cart -->
                        <div class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                <i class="fa fa-shopping-cart"></i>
                                <span>Giỏ Hàng</span>
                                <div class="qty">0</div>
                            </a>

                            <div class="cart-dropdown" style="display: none;">
                                <div class="cart-list">
                                    <div id="empty-cart-message"
                                        style="text-align:center; color:#fd1111ec; font-style:italic; display:none; padding: 15px 10px;">
                                        Chưa có sản phẩm nào trong giỏ hàng
                                    </div>

                                    <!-- Ví dụ mẫu sản phẩm -->
                                    <!--
            <div class="product-widget">
                <div class="product-img">
                    <img src="/images/product01.png" alt="">
                </div>
                <div class="product-body">
                    <h3 class="product-name"><a href="#">Tên sản phẩm ở đây</a></h3>
                    <h4 class="product-price"><span class="qty">1x</span>980.000 VNĐ</h4>
                </div>
                <button class="delete"><i class="fa fa-close"></i></button>
            </div>
            -->
                                </div>
                                <div class="cart-summary">
                                    <small>Số sản phẩm đã chọn</small>
                                    <h5>TỔNG TIỀN: 0 VNĐ</h5>
                                </div>
                                <div class="cart-btns">
                                    <a href="#">Xem Giỏ Hàng</a>
                                    <a href="#">Thanh Toán <i class="fa fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        </div>
                        <!-- /Cart -->

                        <!--Account-->
                        <div class="dropdown Account">
                            <a a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                <i class="fa fa-user-o me-1"></i>
                                <% if (user && user.emails && user.emails[0]) { %>
                                    <%= user.emails[0].value.split('@')[0] %>
                                        <% } else { %>
                                            Guest
                                            <% } %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <% if (user) { %>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i> Hồ sơ</a>
                                    </li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i> Cài đặt</a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt me-2"></i>
                                            Đăng xuất</a></li>
                                    <% } else { %>
                                        <li><a class="dropdown-item" href="/login"><i
                                                    class="fas fa-sign-in-alt me-2"></i> Đăng nhập</a></li>
                                        <li><a class="dropdown-item" href="/register"><i
                                                    class="fas fa-user-plus me-2"></i> Đăng ký</a></li>
                                        <% } %>
                            </ul>
                        </div>
                        <!--/Account-->
                        <!-- Menu Toogle -->
                        <div class="menu-toggle">
                            <a href="#">
                                <i class="fa fa-bars"></i>
                                <span>Menu</span>
                            </a>
                        </div>
                        <!-- /Menu Toogle -->

                    </div>
                </div>
                <!-- /ACCOUNT -->
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </div>
    <!-- /MAIN HEADER -->
    <!-- NAVIGATION -->
    <nav id="navigation">
        <!-- container -->
        <div class="container">
            <!-- responsive-nav -->
            <div id="responsive-nav">
                <!-- NAV -->
                <ul class="main-nav nav navbar-nav" id="nav-categories">
                    <li class="active"><a href="/" data-id="0">Trang Chủ</a></li>
                    <li><a href="/store/all" data-id="0">Sản Phẩm</a></li>
                    <li><a href="#" data-id="1">Laptop</a></li>
                    <li><a href="#" data-id="2">CPU</a></li>
                    <li><a href="#" data-id="3">GPU</a></li>
                    <li><a href="#" data-id="4">MainBoard</a></li>
                    <li><a href="#" data-id="5">RAM</a></li>
                    <li><a href="#" data-id="6">SSD</a></li>
                    <li><a href="#" data-id="7">Power Supply</a></li>
                    <li><a href="#" data-id="8">Mouse</a></li>
                    <li><a href="#" data-id="9">KeyBoard</a></li>
                    <li><a href="#" data-id="10">Monitor</a></li>

                </ul>


                <!-- /NAV -->
            </div>
            <!-- /responsive-nav -->
        </div>
        <!-- /container -->
    </nav>
    <!-- /NAVIGATION -->
    <script>
        // --- TÌM KIẾM QUA FORM HEADER ---
        const searchForm = document.getElementById("search-form");
        if (searchForm) {
            searchForm.addEventListener("submit", function (e) {
                e.preventDefault();
                const keyword = document.getElementById("search-input").value.trim();
                if (keyword) {
                    window.location.href = `/store?q=${encodeURIComponent(keyword)}`;
                }
            });
        }
    </script>

</body>

</html>