<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('#nav-categories a').forEach(link => {
            link.addEventListener('click', function (e) {
                const categoryId = this.getAttribute('data-id');
                const href = this.getAttribute('href');

                // Nếu là link "Sản phẩm" (href="/store/all"), không can thiệp, để mặc định
                if (href === '/store/all') {
                    return;
                }

                // Nếu không, chặn mặc định để xử lý custom
                e.preventDefault();

                if (categoryId === '0') {
                    window.location.href = '/';
                } else {
                    window.location.href = `/store?category=${categoryId}`;
                }
            });
        });
    });
</script>


