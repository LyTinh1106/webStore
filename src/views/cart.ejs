                <div class="col-12">
                    <h1 class="section-title">Chi tiết giỏ hàng</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <!-- Danh sách sản phẩm trong giỏ hàng -->
                    <div class="cart-items">
