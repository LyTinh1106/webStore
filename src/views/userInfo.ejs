<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông Tin Tài Khoản</title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/slick.css">
    <link rel="stylesheet" href="/css/slick-theme.css">
    <link rel="stylesheet" href="/css/nouislider.min.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">

    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f5f8fc;
        }

        .account-container {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
            margin-top: 40px;
            overflow: hidden;
        }

        .left-panel {
            background: #e8f4fd;
            padding: 25px 20px;
            border-right: 1px solid #ddd;
            min-height: 100%;
        }

        .user-avatar {
            width: 110px;
            height: 110px;
            background: #d0e9f8;
            border-radius: 50%;
            margin: 0 auto 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 42px;
            color: #337ab7;
        }

        .user-info h4 {
            margin-bottom: 5px;
        }

        .user-info p {
            font-size: 14px;
            color: #666;
        }

        .nav-pills>li>a {
            color: #333;
            margin-bottom: 10px;
            border-radius: 8px;
            padding: 10px;
            transition: 0.3s;
        }

        .nav-pills>li.active>a,
        .nav-pills>li>a:hover {
            background-color: #00AEEF;
            color: #fff;
        }

        .right-panel {
            padding: 35px;
        }

        .tab-content h3 {
            margin-bottom: 25px;
        }

        .form-group label {
            font-weight: 500;
        }

        .btn-primary {
            background-color: #00AEEF;
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
        }

        .btn-primary:hover {
            background-color: #0096c7;
        }

        .order-item {
            background: #f9f9f9;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.05);
        }

        .order-header {
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .badge-success {
            background-color: #28a745;
            padding: 6px 10px;
            border-radius: 5px;
        }

        .badge-warning {
            background-color: #ffc107;
            padding: 6px 10px;
            border-radius: 5px;
        }

        .logout-btn {
            margin-top: 20px;
            display: block;
            width: 100%;
            text-align: center;
        }

        @media (max-width: 768px) {
            .left-panel {
                margin-bottom: 20px;
                border-right: none;
                border-bottom: 1px solid #ddd;
            }
        }
    </style>
</head>

<body>
    <%- include('./header.ejs') %>

        <div class="container">
            <h2 class="text-center">Thông Tin Tài Khoản</h2>

            <div class="account-container">
                <div class="row">
                    <div class="col-md-3 left-panel">
                        <div class="user-info text-center">
                            <div class="user-avatar">
                                <i class="fa fa-user"></i>
                            </div>
                            <h4><%= (customer && customer.last_name && customer.first_name) ? customer.last_name + " " + customer.first_name : "User" %></h4>
                            <% let displayEmail="Không có email" ; if (user) { if (user.emails && user.emails[0]) {
                                displayEmail=user.emails[0].value; } else if (user.email) { displayEmail=user.email; } }
                                %>
                                <span>
                                    <%= displayEmail %>
                                </span>
                        </div>

                        <ul class="nav nav-pills nav-stacked" role="tablist">
                            <li role="presentation" class="active">
                                <a href="#customer-info" aria-controls="customer-info" role="tab" data-toggle="tab">
                                    <i class="fa fa-user"></i> Thông Tin Khách Hàng
                                </a>
                            </li>
                            <li role="presentation">
                                <a href="#order-history" aria-controls="order-history" role="tab" data-toggle="tab">
                                    <i class="fa fa-history"></i> Lịch Sử Đơn Hàng
                                </a>
                            </li>
                            <li>
                                <a href="/logout" id="logout-button" class="btn btn-danger logout-btn">
                                    <i class="fa fa-sign-out"></i> Đăng Xuất
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-md-9 right-panel">
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="customer-info">
                                <h3 class="text-center mb-4">Thông tin tài khoản</h3>
                                <form id="customer-form">
                                    <input type="hidden" id="customerId">
                                    <!-- Họ và Tên -->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="lastName">Họ</label>
                                                <input type="text" class="form-control" id="firstName" placeholder="Tên"
                                                    value="<%= customer ? customer.first_name : '' %>">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="firstName">Tên</label>
                                                <input type="text" class="form-control" id="lastName" placeholder="Họ"
                                                    value="<%= customer ? customer.last_name : '' %>">
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Giới tính -->
                                    <div class="form-group">
                                        <label>Giới tính</label><br>
                                        <label class="radio-inline">
                                            <input type="radio" name="gender" value="male"
                                              <%= customer && customer.gender === 'male' ? 'checked' : '' %>> Nam
                                          </label>
                                        
                                          <label class="radio-inline">
                                            <input type="radio" name="gender" value="female"
                                              <%= customer && customer.gender === 'female' ? 'checked' : '' %>> Nữ
                                          </label>
                                    </div>

                                    <!-- Số điện thoại -->
                                    <div class="form-group">
                                        <label for="phone">Số điện thoại</label>
                                        <input type="tel" class="form-control" id="phone" placeholder="Số điện thoại"
                                            value="<%= customer ? customer.phone : '' %>">
                                    </div>

                                    <!-- Email -->
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" id="email" placeholder="Email"
                                            value="<%=(user.emails && user.emails[0] && user.emails[0].value) || user.email%>">
                                    </div>

                                    <!-- Địa chỉ -->
                                    <div class="form-group">
                                        <label for="address">Địa chỉ</label>
                                        <textarea class="form-control" id="address" rows="3"
                                            placeholder="123 Đường ABC, Quận XYZ, TP. Hồ Chí Minh"><%= customer ? customer.address : '' %></textarea>

                                    </div>

                                    <!-- Nút lưu -->
                                    <button type="submit" class="btn btn-primary px-4 py-2">Cập Nhật Thông
                                        Tin</button>
                                </form>
                                <script>
                                    document.getElementById("customer-form").addEventListener("submit", async function (e) {
                                        e.preventDefault();

                                        const customer = {
                                            first_name: document.getElementById("firstName").value.trim(),
                                            last_name: document.getElementById("lastName").value.trim(),
                                            gender: document.querySelector("input[name='gender']:checked")?.value || "",
                                            email: document.getElementById("email").value.trim(),
                                            phone: document.getElementById("phone").value.trim(),
                                            address: document.getElementById("address").value.trim(),
                                        };

                                        // Kiểm tra dữ liệu bắt buộc
                                        if (!customer.first_name || !customer.last_name || !customer.email) {
                                            alert("Vui lòng nhập đầy đủ Họ, Tên và Email.");
                                            return;
                                        }

                                        try {
                                            const checkRes = await fetch(`/api/customer/check/${encodeURIComponent(customer.email)}`);
                                            if (checkRes.ok) {
                                                const existing = await checkRes.json();
                                                // Đã tồn tại -> gọi cập nhật
                                                const updateRes = await fetch(`/api/customer/update/${existing.id}`, {
                                                    method: "PUT",
                                                    headers: { "Content-Type": "application/json" },
                                                    body: JSON.stringify(customer),
                                                });

                                                const updateResult = await updateRes.json();
                                                if (updateRes.ok) {
                                                    alert("Cập nhật thành công!");
                                                } else {
                                                    alert(updateResult.message || "Lỗi cập nhật");
                                                }
                                            } else {
                                                // Không tồn tại -> tạo mới
                                                const createRes = await fetch("/api/customer/create", {
                                                    method: "POST",
                                                    headers: { "Content-Type": "application/json" },
                                                    body: JSON.stringify(customer),
                                                });

                                                const createResult = await createRes.json();
                                                if (createRes.ok) {
                                                    // alert("Tạo khách hàng mới thành công!");
                                                } else {
                                                    alert(createResult.message || "Lỗi tạo mới");
                                                }
                                            }
                                        } catch (error) {
                                            console.error("Lỗi:", error);
                                            alert("Có lỗi xảy ra.");
                                        }
                                    });
                                </script>
                            </div>

                            <div role="tabpanel" class="tab-pane" id="order-history">
                                <h3>Lịch Sử Đơn Hàng</h3>
                                <% if (orders.length> 0) { %>
                                    <% orders.forEach(order=> { %>
                                        <div class="order-item-container">
                                            <div class="order-item">
                                                <div class="order-header">
                                                    <div><strong>Mã đơn hàng:</strong> #ORD<%= order.id%>
                                                    </div>
                                                    <div><span class="badge badge-success">
                                                            <%= order.order_status%>
                                                        </span></div>
                                                </div>
                                                <div class="order-details">
                                                    <p><strong>Ngày đặt:</strong>
                                                        <%= new Date(order.created_at).toLocaleDateString('vi-VN') %>
                                                    </p>
                                                    <p><strong>Tổng tiền:</strong>
                                                        <%= order.total_payment %>đ
                                                    </p>
                                                    <p><strong>Phương thức thanh toán:</strong>
                                                        <%= order.payment_method %>
                                                    </p>
                                                    <button class="btn btn-primary btn-sm view-detail-btn">Xem chi
                                                        tiết</button>
                                                </div>
                                            </div>
                                        </div>

                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="7" class="text-center">Không có đơn hàng nào.</td>
                                                </tr>
                                                <% } %>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('./footer.ejs') %>

            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.4.1/js/bootstrap.min.js"></script>

            <script>
                $(document).ready(function () {

                    $('.view-detail-btn').click(function () {
                        const orderID = $(this).closest('.order-item').find('.order-header div:first-child').text().split('#')[1].trim();
                        alert('Chi tiết đơn hàng #' + orderID);
                    });


                });

                $(document).ready(function () {
                    const urlParams = new URLSearchParams(window.location.search);
                    const tabId = urlParams.get("tab");

                    if (tabId) {
                        $('.nav-pills a[href="#' + tabId + '"]').tab('show');
                    }

                    $('.view-detail-btn').click(function () {
                        const orderID = $(this).closest('.order-item').find('.order-header div:first-child').text().split('#')[1].trim();
                        alert('Chi tiết đơn hàng #' + orderID);
                    });

                });
            </script>
</body>

</html>